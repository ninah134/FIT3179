{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Line chart of Global Mean Sea Level (GMSL) over time with mm units in tooltip.",
  "data": {
    "url": "https://raw.githubusercontent.com/ninah134/FIT3179/refs/heads/main/Assignments/GlobalMeanSeaLevelData.csv"
  },
  "transform": [
    {
      "calculate": "format(datum['GMSL (monthly)'], '.2f') + ' mm'",
      "as": "GMSL_Label"
    }
  ],
  "mark": {
    "type": "line",
    "color": "darkblue",
    "strokeWidth": 2
  },
  "encoding": {
    "x": {
      "field": "Time",
      "type": "temporal",
      "title": "Time (year)",
      "axis": {"format": "%Y"}
    },
    "y": {
      "field": "GMSL (monthly)",
      "type": "quantitative",
      "title": "Global Mean Sea Level (mm)"
    },
    "tooltip": [
      {"field": "Time", "type": "temporal", "title": "Date"},
      {"field": "GMSL_Label", "type": "nominal", "title": "Sea Level"}
    ]
  },
  "config": {
    "axis": {"labelFontSize": 10, "titleFontSize": 12},
    "title": {"fontSize": 16, "fontWeight": "bold"}
  }
}
