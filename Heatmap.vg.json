{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "background": null,
  "data": {
    "url": "https://raw.githubusercontent.com/ninah134/FIT3179/refs/heads/main/Assignments/GlobalMeanSeaLevelData.csv"
  },
  "title": "Global Average Sea Level Change from 1993 to 2020",
  "transform": [
    {
      "calculate": "format(datum['GMSL (monthly)'], '.2f') + ' mm'",
      "as": "Sea_Level_with_Units"
    }
  ],
  "mark": {"type": "rect", "tooltip": true},
  "encoding": {
    "x": {
      "field": "Time",
      "timeUnit": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": -45, "labelFontSize": 10, "titleFontSize": 12}
    },
    "y": {
      "field": "Time",
      "timeUnit": "month",
      "type": "ordinal",
      "title": "Month"
    },
    "color": {
      "field": "GMSL (monthly)",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {"title": "Global Average Sea Level (mm)"}
    },
    "tooltip": [
      {"field": "Time", "type": "temporal", "title": "Date"},
      {"field": "Sea_Level_with_Units", "type": "nominal", "title": "Sea Level"}
    ]
  },
  "config": {
    "view": {"strokeWidth": 0, "step": 13},
    "axis": {"domain": false}
  }
}
